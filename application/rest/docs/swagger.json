                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Time Record"
                ],
                "summary": "approve a pending time record",
                "operationId": "approveTimeRecord",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Time Record ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/rest.HTTPResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/rest.HTTPError"
