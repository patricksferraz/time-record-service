                "approved_by": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string"
                },
                "created_by": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "employee_id": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "refused_by": {
                    "type": "string"
                },
                "refused_reason": {
                    "type": "string"
                },
                "regular_time": {
                    "type": "boolean"
                },
                "status": {
                    "type": "integer"
                },
                "time": {
                    "type": "string"
                },
                "tz_offset": {
                    "type": "integer"
                },
                "updated_at": {
                    "type": "string"
                }
            }
